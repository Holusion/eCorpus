{
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "NodeNext",
        "target": "ES2021",
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "types": ["mocha", "chai", "chai-as-promised"],
        "outDir": "./dist",
        "rootDir": "."
    },
    "files": [
        "index.ts",
        "healthcheck.ts"
    ],
    "include": ["./**/*.ts"],
    "exclude": [
        "node_modules"
    ],
    "ts-node": { "esm": true, "files": true }
}
