{
    "name": "e-thesaurus-server",
    "version": "0.0.1",
    "description": "eThesaurus application, based on Smithsonian DPO Voyager - 3D Explorer and Tool Suite",
    "public": false,
    "type": "module",
    "scripts": {
        "start": "node ./dist/index.js",
        "test": "NODE_NO_WARNINGS=1 mocha",
        "test-watch": "NODE_NO_WARNINGS=1 mocha --parallel --watch --reporter min",
        "build": "tsc -b ."
    },
    "nodemonConfig": {
        "delay": 1000
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Holusion/ecorpus.git"
    },
    "contributors": [],
    "license": "Apache-2.0",
    "homepage": "https://github.com/Holusion/ecorpus",
    "engines": {
        "node": ">=16.14"
    },
    "mocha": {
        "ui": "bdd",
        "recursive": true,
        "check-leaks": true,
        "extension": [
            "js",
            "ts"
        ],
        "loader": "ts-node/esm",
        "require": [
            "./tests-common.ts"
        ],
        "ignore": "./node_modules/**/*",
        "spec": "./**/*.test.ts"
    },
    "dependencies": {
        "body-parser": "^1.20.3",
        "cookie-parser": "^1.4.7",
        "cookie-session": "^2.1.0",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "handlebars": "^4.7.8",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.16",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "xml-js": "^1.6.11",
        "yauzl": "^3.2.0",
        "yazl": "^3.3.1"
    },
    "devDependencies": {
        "@types/chai": "^5.0.1",
        "@types/chai-as-promised": "^8.0.1",
        "@types/cookie-parser": "^1.4.8",
        "@types/cookie-session": "^2.0.49",
        "@types/express": "^5.0.0",
        "@types/mocha": "^10.0.10",
        "@types/morgan": "^1.9.9",
        "@types/node": "^16",
        "@types/nodemailer": "^6.4.17",
        "@types/supertest": "^6.0.2",
        "@types/yauzl": "^2.10.3",
        "@types/yazl": "^2.4.5",
        "chai": "^5.1.2",
        "chai-as-promised": "^8.0.1",
        "mocha": "^10.8.2",
        "supertest": "^7.0.0",
        "ts-node": "^10.9.2",
        "webpack-dev-middleware": "^6.1.1"
    },
    "overrides": {
        "webpack-dev-middleware": {
            "webpack": "^5.88.1"
        }
    }
}
